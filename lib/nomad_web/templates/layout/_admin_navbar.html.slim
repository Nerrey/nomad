nav.navbar.navbar-default
  .container-fluid
    /! Brand and toggle get grouped for better mobile display
    .navbar-header
      = link "Nomad", to: admin_static_path(@conn, :index), class: "navbar-brand"
    /! Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        = if @current_admin do
          li.nav.navbar-nav
            = link "Главная", to: admin_static_path(@conn, :index)
          li.nav.navbar-nav
            = link "Опыт", to: admin_resume_path(@conn, :index)
          li.nav.navbar-nav
            = link "Блог", to: admin_blog_path(@conn, :index)
          li.nav.navbar-nav
            = link "Администраторы", to: admin_admin_path(@conn, :index)
      ul.nav.navbar-nav.navbar-right
        = if @current_admin do
          li
            a href="#"
              = @current_admin.name
          li.right_25.top_17
            = link to: admin_session_path(@conn, :logout, @current_admin) do
              span.glyphicon.glyphicon-log-out
        - else
          li= link "Войти",  to: admin_session_path(@conn, :new)

    .navbar-collapse
  .container-fluid
